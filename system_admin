    <script>
        // 页面切换功能
        document.getElementById('nav-logs').addEventListener('click', function(e) {
            e.preventDefault();
            showSection('logs');
        });
        
        document.getElementById('nav-backup').addEventListener('click', function(e) {
            e.preventDefault();
            showSection('backup');
        });
        
        function showSection(section) {
            // 更新导航激活状态
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            if (section === 'logs') {
                document.getElementById('nav-logs').classList.add('active');
                document.getElementById('logs-section').style.display = 'block';
                document.getElementById('backup-section').style.display = 'none';
                document.getElementById('page-title').textContent = '操作日志审计';
            } else {
                document.getElementById('nav-backup').classList.add('active');
                document.getElementById('logs-section').style.display = 'none';
                document.getElementById('backup-section').style.display = 'block';
                document.getElementById('page-title').textContent = '数据备份恢复';
            }
        }
        
        // 模拟日志数据
        const logData = [
            { time: '2023-10-27 09:15:23', type: 'login', operator: 'admin', ip: '192.168.1.100', description: '系统管理员登录', result: '成功' },
            { time: '2023-10-27 10:30:45', type: 'backup', operator: 'admin', ip: '192.168.1.100', description: '执行手动数据备份', result: '成功' },
            { time: '2023-10-27 11:45:12', type: 'modify', operator: 'teacher_zhang', ip: '192.168.1.150', description: '修改课程成绩构成', result: '成功' },
            { time: '2023-10-26 22:15:30', type: 'backup', operator: 'system', ip: '127.0.0.1', description: '执行自动数据备份', result: '成功' },
            { time: '2023-10-26 15:20:18', type: 'delete', operator: 'admin', ip: '192.168.1.100', description: '删除过期日志记录', result: '成功' },
            { time: '2023-10-26 14:05:33', type: 'modify', operator: 'teacher_li', ip: '192.168.1.155', description: '更新学生成绩信息', result: '成功' },
            { time: '2023-10-25 22:15:30', type: 'backup', operator: 'system', ip: '127.0.0.1', description: '执行自动数据备份', result: '成功' },
            { time: '2023-10-25 16:40:22', type: 'login', operator: 'teacher_wang', ip: '192.168.1.160', description: '教师账号登录', result: '成功' },
            { time: '2023-10-25 09:12:45', type: 'restore', operator: 'admin', ip: '192.168.1.100', description: '恢复用户数据表', result: '成功' },
            { time: '2023-10-24 22:15:30', type: 'backup', operator: 'system', ip: '127.0.0.1', description: '执行自动数据备份', result: '成功' },
        ];
        
        // 渲染日志表格
        function renderLogsTable(logs) {
            const tableBody = document.getElementById('logs-table-body');
            tableBody.innerHTML = '';
            
            logs.forEach(log => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${log.time}</td>
                    <td><span class="log-type ${log.type}">${getLogTypeText(log.type)}</span></td>
                    <td>${log.operator}</td>
                    <td>${log.ip}</td>
                    <td>${log.description}</td>
                    <td><span class="${log.result === '成功' ? 'success' : 'danger'}">${log.result}</span></td>
                `;
                tableBody.appendChild(row);
            });
            
            // 渲染分页
            renderPagination();
        }
        
        // 获取操作类型文本
        function getLogTypeText(type) {
            const typeMap = {
                'login': '登录/登出',
                'modify': '数据修改',
                'delete': '数据删除',
                'backup': '数据备份',
                'restore': '数据恢复'
            };
            return typeMap[type] || type;
        }
        
        // 渲染分页
        function renderPagination() {
            const pagination = document.getElementById('logs-pagination');
            pagination.innerHTML = '';
            
            // 简单分页示例
            for (let i = 1; i <= 5; i++) {
                const pageBtn = document.createElement('button');
                pageBtn.className = i === 1 ? 'page-btn active' : 'page-btn';
                pageBtn.textContent = i;
                pageBtn.addEventListener('click', function() {
                    document.querySelectorAll('.page-btn').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    // 在实际应用中，这里会加载对应页面的数据
                });
                pagination.appendChild(pageBtn);
            }
        }
        
        // 模拟备份历史数据
        const backupHistory = [
            { date: '2023-10-26 22:15:30', type: '自动备份', size: '1.2 GB', status: '成功' },
            { date: '2023-10-25 22:15:30', type: '自动备份', size: '1.1 GB', status: '成功' },
            { date: '2023-10-24 22:15:30', type: '自动备份', size: '1.2 GB', status: '成功' },
            { date: '2023-10-23 22:15:30', type: '自动备份', size: '1.1 GB', status: '成功' },
            { date: '2023-10-22 22:15:30', type: '自动备份', size: '1.2 GB', status: '成功' },
        ];
        
        // 渲染备份历史
        function renderBackupHistory() {
            const historyList = document.getElementById('backup-history-list');
            historyList.innerHTML = '';
            
            backupHistory.forEach(backup => {
                const item = document.createElement('div');
                item.className = 'history-item';
                item.innerHTML = `
                    <div class="history-info">
                        <h4>${backup.type} - ${backup.date}</h4>
                        <p>大小: ${backup.size} | 状态: <span style="color: ${backup.status === '成功' ? '#28a745' : '#dc3545'}">${backup.status}</span></p>
                    </div>
                    <div class="history-actions">
                        <button class="btn btn-secondary btn-sm" onclick="downloadBackup('${backup.date}')">
                            <i class="fas fa-download"></i> 下载
                        </button>
                        <button class="btn btn-success btn-sm" onclick="restoreThisBackup('${backup.date}')">
                            <i class="fas fa-undo"></i> 恢复
                        </button>
                    </div>
                `;
                historyList.appendChild(item);
            });
        }
        
        // 搜索日志
        document.getElementById('search-logs-btn').addEventListener('click', function() {
            const typeFilter = document.getElementById('log-type').value;
            const operatorFilter = document.getElementById('operator').value.trim().toLowerCase();
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
            
            let filteredLogs = logData;
            
            if (typeFilter !== 'all') {
                filteredLogs = filteredLogs.filter(log => log.type === typeFilter);
            }
            
            if (operatorFilter) {
                filteredLogs = filteredLogs.filter(log => log.operator.toLowerCase().includes(operatorFilter));
            }
            
            if (startDate) {
                filteredLogs = filteredLogs.filter(log => new Date(log.time.split(' ')[0]) >= new Date(startDate));
            }
            
            if (endDate) {
                filteredLogs = filteredLogs.filter(log => new Date(log.time.split(' ')[0]) <= new Date(endDate));
            }
            
            renderLogsTable(filteredLogs);
        });
        
        // 重置筛选
        document.getElementById('reset-filters-btn').addEventListener('click', function() {
            document.getElementById('log-type').value = 'all';
            document.getElementById('operator').value = '';
            document.getElementById('start-date').value = '';
            document.getElementById('end-date').value = '';
            renderLogsTable(logData);
        });
        
        // 导出日志
        document.getElementById('export-logs-btn').addEventListener('click', function() {
            alert('日志导出功能已触发，系统将生成CSV文件供下载。');
            // 在实际应用中，这里会调用导出API
        });
        
        // 立即备份
        document.getElementById('manual-backup-btn').addEventListener('click', function() {
            alert('开始执行手动数据备份，请勿关闭页面...');
            // 模拟备份过程
            setTimeout(() => {
                alert('数据备份完成！');
                // 在实际应用中，这里会刷新备份历史
            }, 2000);
        });
        
        // 恢复备份按钮
        document.getElementById('restore-backup-btn').addEventListener('click', function() {
            document.getElementById('restore-modal').style.display = 'flex';
        });
        
        // 设置备份计划按钮
        document.getElementById('schedule-backup-btn').addEventListener('click', function() {
            document.getElementById('schedule-modal').style.display = 'flex';
        });
        
        // 关闭模态框
        document.getElementById('close-restore-modal').addEventListener('click', function() {
            document.getElementById('restore-modal').style.display = 'none';
        });
        
        document.getElementById('close-schedule-modal').addEventListener('click', function() {
            document.getElementById('schedule-modal').style.display = 'none';
        });
        
        document.getElementById('cancel-restore').addEventListener('click', function() {
            document.getElementById('restore-modal').style.display = 'none';
        });
        
        document.getElementById('cancel-schedule').addEventListener('click', function() {
            document.getElementById('schedule-modal').style.display = 'none';
        });
        
        // 确认恢复备份
        document.getElementById('confirm-restore').addEventListener('click', function() {
            const selectedBackup = document.getElementById('backup-select').value;
            if (!selectedBackup) {
                alert('请选择要恢复的备份点！');
                return;
            }
            
            if (confirm('警告：此操作将覆盖当前所有数据，且不可恢复！确定要继续吗？')) {
                alert('开始恢复备份，系统将重启...');
                // 在实际应用中，这里会调用恢复API
                document.getElementById('restore-modal').style.display = 'none';
            }
        });
        
        // 保存备份计划
        document.getElementById('save-schedule').addEventListener('click', function() {
            const frequency = document.getElementById('backup-frequency').value;
            const time = document.getElementById('backup-time').value;
            const retention = document.getElementById('retention-policy').value;
            
            alert(`备份计划已保存：${frequency}，备份时间：${time}，保留策略：${retention}天`);
            document.getElementById('schedule-modal').style.display = 'none';
        });
        
        // 查看备份历史
        document.getElementById('backup-history-btn').addEventListener('click', function() {
            // 滚动到备份历史部分
            document.getElementById('backup-history-list').scrollIntoView({ behavior: 'smooth' });
        });
        
        // 清理旧备份
        document.getElementById('clean-backup-btn').addEventListener('click', function() {
            if (confirm('确定要清理30天前的旧备份文件吗？')) {
                alert('开始清理旧备份文件...');
                // 在实际应用中，这里会调用清理API
            }
        });
        
        // 模拟下载备份
        window.downloadBackup = function(backupDate) {
            alert(`开始下载备份文件：${backupDate}`);
            // 在实际应用中，这里会调用下载API
        };
        
        // 模拟恢复特定备份
        window.restoreThisBackup = function(backupDate) {
            if (confirm(`确定要恢复备份点 ${backupDate} 吗？此操作将覆盖当前数据！`)) {
                alert(`开始恢复备份：${backupDate}`);
                // 在实际应用中，这里会调用恢复API
            }
        };
        
        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            // 设置默认日期
            const today = new Date().toISOString().split('T')[0];
            const sevenDaysAgo = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];
            
            document.getElementById('start-date').value = sevenDaysAgo;
            document.getElementById('end-date').value = today;
            
            // 初始渲染
            renderLogsTable(logData);
            renderBackupHistory();
            
            // 退出按钮
            document.querySelector('.logout-btn').addEventListener('click', function() {
                if (confirm('确定要退出系统吗？')) {
                    alert('已退出系统管理端');
                    // 在实际应用中，这里会跳转到登录页
                }
            });
        });
    </script>
</body>
</html>
